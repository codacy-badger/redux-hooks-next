{
  "compilerOptions": {
    "experimentalDecorators": true,
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "jsx": "react",
    "lib": ["dom", "es2015", "es2016", "es2017"],
    "moduleResolution": "node",
    "noEmit": true,
    "strict": true,
    "baseUrl": "./src",
    "target": "es2015"
  },
  "exclude": ["node_modules"]
}
